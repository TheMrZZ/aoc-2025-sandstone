{
  "files": {
    "includes": ["src/**/*.ts"]
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnusedVariables": {
          "options": {
            "ignoreRestSiblings": true
          }
        }
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [":NODE:", ":BLANK_LINE:", ":PACKAGE:", ":BLANK_LINE:", ":PATH:"]
          }
        }
      }
    }
  }
}
